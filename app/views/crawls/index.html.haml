.dashboard-summary
  %p No. of crawls
  %p= @crawls.count
  .float-right
    = link_to 'New Crawl', new_crawl_path, class: 'btn btn-primary'
%table.table.table-hover.table-bordered
  %thead.thead-inverse
    %tr
      %th.col-md-8 Url you tried to crawl
      %th.col-md-3 No. of records crawled
      %th.col-md-2 Actions
  %tbody
    - @crawls.each do |crawl|
      %tr.data-href{'data-href'=> crawl_path(crawl)}
        %td.col-md-8
          = link_to crawl.url, crawl.url
        %td.col-md-3= crawl.products.count
        %td.col-md-2
          = link_to 'Delete', crawl_path(crawl), method: :delete, data: 'Are you sure?', class: 'btn btn-danger'
:javascript
  crawler.table.init();


